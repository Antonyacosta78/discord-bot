{
  "compilerOptions":{
    "target":"es6",
    "module":"commonjs",
    "strict":true,
    "noImplicitAny":true,
    "strictNullChecks":true,
    "alwaysStrict":true,
    "moduleResolution":"node",
    "baseUrl":"./",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths":{
      "$/*":[
        "src/*"
      ]
    },
    "esModuleInterop":true,
    "skipLibCheck":true,
    "forceConsistentCasingInFileNames":true,
    "resolveJsonModule":true
  },
  "exclude":[
    "node_modules",
    "**/*.spec.ts"
  ]
}